@page
@using easyshifthq.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model easyshifthq.Web.Components.BulkInviteModalModel
@inject IHtmlLocalizer<easyshifthqResource> L

<abp-modal centered="true" size="Large" id="BulkInviteModal">
    <abp-modal-header title="@L["BulkInvite"]"></abp-modal-header>
    <abp-modal-body>
        <div class="alert alert-info">
            <i class="fa fa-info-circle"></i>
            @L["BulkInviteInfo"]
            <br/>
            @L["CsvFormat"]: Email, Role (optional), Location (optional)
        </div>
        
        <form id="BulkInviteForm" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="csvFile">@L["SelectCsvFile"]</label>
                <input type="file" class="form-control" id="csvFile" name="csvFile" accept=".csv" required />
            </div>

            <div class="mb-3">
                <label class="form-label">@L["DefaultSettings"]</label>
                <abp-select asp-for="DefaultRole" asp-items="@Model.Roles" />
                <abp-select asp-for="DefaultLocation" asp-items="@Model.Locations" />
            </div>
        </form>
        
        <div id="uploadPreview" class="d-none">
            <h5>@L["Preview"]</h5>
            <div class="table-responsive">
                <table class="table table-sm" id="previewTable">
                    <thead>
                        <tr>
                            <th>@L["Email"]</th>
                            <th>@L["Role"]</th>
                            <th>@L["Location"]</th>
                            <th>@L["Status"]</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </abp-modal-body>
    <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
</abp-modal>