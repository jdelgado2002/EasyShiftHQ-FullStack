@page
@using easyshifthq.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model easyshifthq.Web.Pages.Locations.CreateModalModel
@inject IHtmlLocalizer<easyshifthqResource> L
@{
    Layout = null;
}

<form asp-page="/Locations/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewLocation"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Location.Name" />
            <abp-input asp-for="Location.Address" />
            <abp-input asp-for="Location.TimeZone" />
            <abp-input asp-for="Location.JurisdictionCode" />
            <abp-input asp-for="Location.Notes" text-area />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>